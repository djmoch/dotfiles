[user]
	email = daniel@danielmoch.com
	name = Daniel Moch
	signingkey = 84BDDD43
[core]
	excludesfile = ~/.cvsignore
[push]
	default = simple
[alias]
	pretty = log --graph --abbrev-commit --pretty=oneline --decorate --all
	ctags = !`git rev-parse --git-dir`/hooks/ctags
	po = push -u origin HEAD
[init]
	templatedir = ~/lib/gitdir
	defaultBranch = main
[include]
	path = ~/etc/gitconfig.local
[pull]
	rebase = true
[sendemail]
	confirm = auto
[rebase]
	autoSquash = true
