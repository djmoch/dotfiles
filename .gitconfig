[user]
	email = daniel@danielmoch.com
	name = Daniel Moch
	signingkey = 84BDDD43
[core]
	excludesfile = ~/.cvsignore
[commit]
	gpgSign = true
[push]
	default = simple
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[alias]
	ls = ls-tree --name-only HEAD
	pretty = log --graph --abbrev-commit --pretty=oneline --decorate --all
	ls-all = !git ls-tree --name-only -r HEAD $(git rev-parse --show-toplevel)
	ls-r = ls-tree --name-only -r HEAD
	ctags = !`git rev-parse --git-dir`/hooks/ctags
[init]
	templatedir = ~/.local/lib/gitdir
[credential]
	helper = /usr/share/git/credential/netrc/git-credential-netrc
[include]
	path = ~/.gitconfig.local
[pull]
	rebase = true
