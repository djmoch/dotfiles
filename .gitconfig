[user]
	email = daniel@danielmoch.com
	name = Daniel Moch
	signingkey = 84BDDD43
[core]
	excludesfile = ~/.cvsignore
[push]
	default = simple
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[alias]
	pretty = log --graph --abbrev-commit --pretty=oneline --decorate --all
	ctags = !`git rev-parse --git-dir`/hooks/ctags
	po = push -u origin HEAD
[init]
	templatedir = ~/lib/gitdir
[credential]
	helper = /usr/share/git/credential/netrc/git-credential-netrc
[include]
	path = ~/etc/gitconfig.local
[pull]
	rebase = true
[sendemail]
	confirm = auto
