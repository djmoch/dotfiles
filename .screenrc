#
# ~/.screenrc
#

term screen-256color
altscreen on
bell_msg 'Bell in window %n^G'
backtick 1 15 1 my status
hardstatus on
hardstatus alwayslastline '%{= dr}[%S]%{=b db} %w %=%{-b dd}%1` %{dr}%H'
startup_message off
mousetrack on

bind h focus left
bind j focus down
bind k focus up
bind l focus right
bind S
bind "'" split -v
bind - split
bind x remove
