Host dotcom dotcom-gpg
    HostName danielmoch.com

Host dotcom-git gogs
    HostName gogs.djmoch.org
    User gogs
    ForwardAgent no

Host pi raspberrypi pi-gpg
    HostName raspberrypi.djmoch.org
    ForwardX11 yes

Host *-gpg
    RemoteForward /run/user/10000/gnupg/S.gpg-agent /run/user/10000/gnupg/S.gpg-agent.extra

Host github github.com
    HostName github.com
    User git
    ForwardAgent no

Host *
    User djmoch
    ForwardAgent yes
